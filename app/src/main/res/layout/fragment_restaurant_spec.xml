<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewSpec"
        android:layout_width="339dp"
        android:layout_height="335dp"
        android:layout_marginTop="92dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logomenu" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/black"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSpec">

        <TextView
            android:id="@+id/text_space_rest_spec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="space"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textViewSpec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textViewSpec2"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="TextView"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textViewSpec3"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="TextView"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_rating_rest_spec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_price_rest_spec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/white" />

    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:contentDescription="bottone"
        app:backgroundTint="#ECD724"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconback" />
</androidx.constraintlayout.widget.ConstraintLayout>